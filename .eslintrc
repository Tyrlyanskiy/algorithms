{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "import",
    "json",
    "@typescript-eslint"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "env": {
    "es6": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "no-param-reassign": 0,
    "semi":"error"
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ]
}
